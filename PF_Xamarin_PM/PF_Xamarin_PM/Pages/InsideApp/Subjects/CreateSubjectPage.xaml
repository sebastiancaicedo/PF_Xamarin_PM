<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PF_Xamarin_PM.CreateSubjectPage">
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15">
            <Entry x:Name="entryName" Placeholder="Nombre de la Asignatura"></Entry>
            <Button Text="Agregar" BackgroundColor="#D32F2F" TextColor="White" Clicked="AddSubject"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>