<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PF_Xamarin_PM.EvaluationPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="labelEvaluationStatus" Text="Unsaved"></ToolbarItem>
        <ToolbarItem Icon="ic_custom_guardar.png"  Clicked="SaveEvaluation"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" Padding="15">
            <StackLayout x:Name="layoutMain" Orientation="Vertical">
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>