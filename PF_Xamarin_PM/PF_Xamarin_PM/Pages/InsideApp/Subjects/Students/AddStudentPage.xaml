<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PF_Xamarin_PM.AddStudentPage">

    <ContentPage.Content>
        <StackLayout Margin="15">
            <StackLayout x:Name="layoutMain" Orientation="Vertical" >
                <Entry x:Name="entryName" Placeholder="Nombre del estudiante"></Entry>
                <Entry x:Name="entryLastName" Placeholder="Apellido del estudiante"></Entry>
                <Entry x:Name="entryEmail" Placeholder="example@uninorte.edu.co"></Entry>
                <Button Text="Agregar" BackgroundColor="#D32F2F" TextColor="White" Clicked="AddStudent"></Button>
            </StackLayout>
            <ActivityIndicator x:Name="loadIndicator" Color="DodgerBlue" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></ActivityIndicator>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>