<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PF_Xamarin_PM.AddStudentPage">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15">
            <Entry x:Name="entryName" Placeholder="Student Name"></Entry>
            <Entry x:Name="entryLastName" Placeholder="Student Last Name"></Entry>
            <Entry x:Name="entryEmail" Placeholder="example@uninorte.edu.co"></Entry>
            <Button Text="Create and Add" Clicked="AddStudent"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>