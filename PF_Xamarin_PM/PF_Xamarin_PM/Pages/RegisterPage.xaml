<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PF_Xamarin_PM.RegisterPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
            <StackLayout x:Name="layoutMain" Orientation="Vertical" Margin="15" VerticalOptions="FillAndExpand">
                <Entry x:Name="entryName" Placeholder="Nombre"></Entry>
                <Entry x:Name="entryLastName" Placeholder="Apellido"></Entry>
                <Entry x:Name="entryEmail" Placeholder="Email"></Entry>
                <Entry x:Name="entryPassword" IsPassword="True" Placeholder="Contraseña"></Entry>
                <Entry x:Name="entryConfirmPassword" IsPassword="True" Placeholder="Confirme la contraseña"></Entry>
                <Button Text="Registrarse" BackgroundColor="#D32F2F" TextColor="White" Clicked="Register"></Button>
            </StackLayout>
            <ActivityIndicator x:Name="loadIndicator" VerticalOptions="CenterAndExpand"></ActivityIndicator>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>