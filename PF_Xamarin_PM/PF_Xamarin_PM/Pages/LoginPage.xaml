<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PF_Xamarin_PM"
             x:Class="PF_Xamarin_PM.LoginPage">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="10">
            <StackLayout x:Name="layoutTop" Orientation="Vertical" VerticalOptions="StartAndExpand">
                <Entry x:Name="entryEmail" Placeholder="example@uninorte.edu.co"></Entry>
                <Entry x:Name="entryPassword" Placeholder="Contraseña" IsPassword="True"></Entry>
                <Button Text="Sign In" Clicked="LogIn"></Button>
            </StackLayout>
            <ActivityIndicator x:Name="loadIndicator" VerticalOptions="CenterAndExpand" Color="DodgerBlue"></ActivityIndicator>
            <StackLayout x:Name="layoutBottom" Orientation="Vertical" VerticalOptions="EndAndExpand">
                <Button Text="¿No tiene Cuenta?. Registrarse aquí" Clicked="ShowRegisterPage"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>